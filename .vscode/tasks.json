{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with Makefile",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run program",
      "type": "shell",
      "command": "./program", 
      "dependsOn": "Build with Makefile"
    },
    {
      "label": "Clean build",
      "type": "shell",
      "command": "make clean"
    }
  ]
}